<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".BrainGame2">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="65dp"
        android:layout_height="43dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="318dp"
        android:layout_marginBottom="648dp"

        android:fontFamily="sans-serif-black"
        android:shadowColor="#00D50E0E"
        android:text="30s"
        android:textAlignment="viewEnd"
        android:textColor="#9C27B0"
        android:textSize="35dp"
        android:textStyle="italic"
        android:translationY="40dp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="208dp"
        android:layout_height="92dp"

        android:layout_marginBottom="12dp"

        android:background="#FFEB3B"
        android:paddingTop="15dp"
        android:shadowColor="#00D50E0E"
        android:text="8+2="
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:textSize="40dp"
        android:textStyle="italic"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="115dp"
        android:layout_height="53dp"
        android:layout_marginStart="284dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="631dp"

        android:shadowColor="#00D50E0E"
        android:text="0/0"
        android:textAlignment="center"

        android:textColor="#9C27B0"
        android:textSize="35dp"
        android:textStyle="italic"

        android:translationY="-30dp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="336dp"
        android:layout_height="214dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="223dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="294dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="107dp">

            <TextView

                android:id="@+id/textView4"
                android:layout_width="168dp"
                android:layout_height="107dp"
                android:background="#D018C0DA"
                android:onClick="click1"
                android:padding="10dp"
                android:text="10"
                android:textAlignment="center"
                android:textSize="60dp" />

            <TextView

                android:id="@+id/textView5"
                android:layout_width="168dp"
                android:layout_height="107dp"
                android:background="#DB054D"
                android:onClick="click2"
                android:padding="10dp"
                android:text="10"
                android:textAlignment="center"
                android:textSize="60dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"

            android:layout_height="107dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="168dp"
                android:layout_height="107dp"
                android:background="#5DFF22"
                android:onClick="click3"
                android:padding="10dp"
                android:text="10"
                android:textAlignment="center"
                android:textSize="60dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="168dp"
                android:layout_height="107dp"
                android:background="#DDC005"
                android:onClick="click4"
                android:padding="10dp"
                android:text="10"
                android:textAlignment="center"
                android:textSize="60dp" />
        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="534dp"
        android:layout_marginBottom="149dp"
        android:background="#85683A"
        android:onClick="start"
        android:text="Start"
        android:textColor="#FCA4E01B"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="100dp"
        android:layout_height="49dp"

        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:shadowColor="#00D50E0E"
        android:text="Level 1"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:textSize="25dp"
        android:textStyle="italic"
        android:translationX="-5dp"
        android:translationY="-5dp"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="220dp"
        android:layout_height="42dp"
        android:layout_marginTop="475dp"
        android:layout_marginBottom="215dp"
        android:alpha="0"
        android:fontFamily="cursive"
        android:text="Your Score:10"
        android:textAlignment="center"
        android:textColor="#D81F11"

        android:textSize="30dp"
        android:textStyle="italic"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="220dp"
        android:layout_height="42dp"
        android:layout_marginTop="475dp"
        android:layout_marginBottom="215dp"
        android:alpha="1"
        android:fontFamily="cursive"
        android:textAlignment="center"

        android:textColor="#D81F11"
        android:textSize="30dp"
        android:textStyle="italic"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>